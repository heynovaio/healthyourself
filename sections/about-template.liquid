        "type": "header",
        "content": "About Header"
      },
      {
        "type": "image_picker",
        "id": "imageSection",
        "label": "Section Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Heading"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Sub Heading"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "header",
        "content": "Second About Copy Row"
      },

      {
        "type": "text",
        "id": "title2",
        "label": "Heading",
        "default": "Heading"
      },
      {
        "type": "text",
        "id": "subtitle2",
        "label": "Sub Heading",
        "default": "Lorem Ipsum Dolor Sit"
      },
      {
        "type": "richtext",
        "id": "text2",
        "label": "Text",
        "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      },
      {
        "type": "text",
        "id": "button_label2",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link2",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Heading & Copy",
        "category": "Content"
      }
    ]
  }
{% endschema %}
