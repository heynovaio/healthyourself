<div class="wrapper template-page">
  <div class="section-header section-header--large">
    <h1 class="section-header__title">{{ 'customer.activate_account.title' | t }}</h1>
  </div>
  <div class="grid__item">
    <p>{{ 'customer.activate_account.subtext' | t }}</p>
  </div>

  <div class="grid">
    <div class="grid__item wide--one-half large--two-thirds medium-down--one-whole">

      {% comment %}
        This form must use 'activate_customer_password'
      {% endcomment %}
      {% form 'activate_customer_password' %}

        {{ form.errors | default_errors }}

        <label for="CustomerPassword">{{ 'customer.activate_account.password' | t }}</label>
        <input type="password" value="" name="customer[password]" id="CustomerPassword">

        <label for="CustomerPasswordConfirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
        <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation">

        <div class="account-buttons">
          <input type="submit" class="btn-primary" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">
          <input type="submit" class="btn-secondary" value="{{ 'customer.activate_account.submit' | t }}">
        </div>
      {% endform %}

    </div>
  </div>
</div>
